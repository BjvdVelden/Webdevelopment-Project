<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>ChatApp</title>

    @* <link rel="stylesheet" href="~/css/site.css"> *@

</head>

<body>

    <div>
        <a asp-controller="Home" asp-action="Index">Home</a>
        <a asp-controller="Home" asp-action="FindUser">Find Users</a>
        <a asp-controller="Home" asp-action="FindGroup">Find Groups</a>
        <a asp-controller="Home" asp-action="Private">Private</a>
    </div>


    <div>
        

        <form asp-controller="Home" asp-action="CreateRoom">
            <button type="button" class="close" onclick="closeModal()">X</button>
            <header>Create Room</header>
            <div>
                Naam <input type="text" name="name">
                MinimumLeeftijd <input type="number" name="minimumage">
                MaximumLeeftijd <input type="number" name="maximumage">
            <footer>
                <button>Create</button>
            </footer>
        </form>
    </div>

        <div>
        @foreach(var chat in Model){
        <a class="room-button" asp-controller="Home" asp-action="Chat" asp-route-id="@chat.Id">
            Zelfhulpgroep: @chat.Name
            MinimumLeeftijd: @chat.MinimumAge
            MaximumLeeftijd: @chat.MaximumAge
        </a>
        }
        </div>
    </body>

</html>