@model IEnumerable<Chat>


<h1> Zoek een groep</h1>
<form asp-controller="Chat" asp-action="FindGroup">
    <p style="margin-top: 50px">
        Zoek bij groep naam: <input type="text" name="onderwerp" />
        <input type="submit" value="Filter" />
    </p>
    <p>
        Zoek bij leeftijdscategorie: <input type="number" name="leeftijd" />
        <input type="submit" value="Filter" />
    </p>
</form>
<div>
        <a class="btn btn-primary" role="button"asp-controller="Chat" asp-action="FindGroup">Zoek naar groepen</a>
        <a class="btn btn-primary" role="button" asp-controller="Chat" asp-action="FindUser">Zoek naar gebruikers</a>
        <a class="btn btn-primary" role="button" asp-controller="Chat" asp-action="Private">Prive</a>
        <a class="btn btn-primary" role="button" asp-controller="Chat" asp-action="CreateRoom">Maak een groep aan</a>
    </div>
<div class="container">
  <div style="margin-top: 50px" class="row">
      @foreach(var chat in Model){
        @if(chat.MaximumAge != 0){
    <div class="card col-sm-2 card-body">
    <h5> Zelfhulpgroep</h5>
    <p> @chat.Name</p>
    <h5> Minimum Leeftijd</h5>
    <p> @chat.MinimumAge</p>
    <h5> Maximum Leeftijd</h5>
    <p> @chat.MaximumAge</p>
    @if(!User.IsInRole("Assistent")){
    <a style="position: absolute; bottom: 0px; margin-top: 50px;" class="btn btn-primary" asp-controller="Chat" asp-action="Chat" asp-route-id="@chat.Id">Naar groep gaan</a>
    }
    </div>
      }
      }
  </div>
</div>