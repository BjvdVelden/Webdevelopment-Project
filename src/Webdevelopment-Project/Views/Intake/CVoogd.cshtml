@model Intake

@{
    ViewData["Title"] = "Voogd aanmaken";
}

<h1>Voogd aanmaken</h1>

<h4>Intake</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CVoogd">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Voornaam" class="control-label">Voornaam van uw kind</label>
                <input asp-for="Voornaam" class="form-control" />
                <span asp-validation-for="Voornaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Achternaam" class="control-label">Achternaam van uw kind</label>
                <input asp-for="Achternaam" class="form-control" />
                <span asp-validation-for="Achternaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GeboorteDatum" class="control-label">Geboortedatum van uw kind</label>
                <input asp-for="GeboorteDatum" class="form-control" />
                <span asp-validation-for="GeboorteDatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BSN" class="control-label">BSN-nummer van uw kind</label>
                <input asp-for="BSN" class="form-control" />
                <span asp-validation-for="BSN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailVoogd" class="control-label">Uw Email</label>
                <input asp-for="EmailVoogd" class="form-control" />
                <span asp-validation-for="EmailVoogd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email van uw kind</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GewensteHulpverlener" class="control-label">Geef de email van een behandelaar</label>
                <input asp-for="GewensteHulpverlener" class="form-control" />
                <span asp-validation-for="GewensteHulpverlener" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GewensteMoment" class="control-label">Gewenst moment</label>
                <input asp-for="GewensteMoment" class="form-control" />
                <span asp-validation-for="GewensteMoment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Onderwerp" class="control-label"></label>
                <input asp-for="Onderwerp" class="form-control" />
                <span asp-validation-for="Onderwerp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Intake" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Terug</a>
</div>

