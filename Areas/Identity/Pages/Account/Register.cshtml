@page
@* @inject UserManager<ApplicationUser> userManager
@using Webdevelopment_Project.Models *@
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    @* var currentUser = await userManager.GetUserAsync(User);
    string email = currentUser.Email; *@
}
<div></div>
<div></div>
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="register-container">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
           <div class="form-group">
                <label asp-for="Input.Voornaam"></label>
                <input asp-for="Input.Voornaam" class="form-control" />
                <span asp-validation-for="Input.Voornaam" class="text-danger"></span>
            </div>         
            <div class="form-group">
                <label asp-for="Input.Achternaam"></label>
                <input asp-for="Input.Achternaam" class="form-control" />
                <span asp-validation-for="Input.Achternaam" class="text-danger"></span>
            </div>    
            <div class="form-group">
                <label asp-for="Input.Geboortedatum"></label>
                <input asp-for="Input.Geboortedatum" class="form-control" />
                <span asp-validation-for="Input.Geboortedatum" class="text-danger"></span>
            </div>    
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Postcode"></label>
                <input asp-for="Input.Postcode" class="form-control" />
                <span asp-validation-for="Input.Postcode" class="text-danger"></span>
            </div>   
            
            <div class="form-group">
                <label asp-for="Input.Huisnummer"></label>
                <input asp-for="Input.Huisnummer" class="form-control" />
                <span asp-validation-for="Input.Huisnummer" class="text-danger"></span>
            </div>  
            
            <div class="form-group">
                <label asp-for="Input.EmailVoogd"></label>
                <input asp-for="Input.EmailVoogd" class="form-control" />
                <span asp-validation-for="Input.EmailVoogd" class="text-danger"></span>
            </div>  
            <div class="form-group">
               <label asp-for="Input.EmailHulpverlener"></label>
                <input asp-for="Input.EmailHulpverlener" class="form-control" />
                <span asp-validation-for="Input.EmailHulpverlener" class="text-danger"></span>
            </div>                      
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-sign-up">Register</button>
            <a class="btn btn-link px-0" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Already have an account?</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

